<body>
    <div class="body"></div>
    <div class="grad"></div>
    <div class="container-login">
        <div class="header">
            <div>
                <a href="/product" style="width: 32%;text-decoration: none">
                    
                    <span>
                       Login
                    </span>
                </a>
            </div>
        </div>
        <br>
        <form class="login" method="post">
            <input type="text" placeholder="username" required asp-for="Input.Username">
            <input type="password" placeholder="password" required asp-for="Input.Password">
            <div style="display: flex">
                <input style="width: 20px;margin:0 10px;" asp-for="Input.RememberMe" type="checkbox">
                <p style="color: #1f1f1f;font-size: 12px">Remember me</p>
            </div>
            <div style="margin-top: 10px;width: auto;" asp-validation-summary="All" id="message" ></div>
            <input type="submit" value="Login">
            <div style="margin:10px">
                <a href="~/Signup" style="text-decoration:none; font-size:15px; color:#5379fa">Don't have account, register now.</a>
            </div>
        </form>

    </div>
</body>
